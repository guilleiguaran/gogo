<script src="/assets/application.js"></script>
<script>
    Go.current = <%= player %>;
    Go.moves = <%= moves %>;
    Go.gameId = <%= id %>;
    var even = (Go.moves.size % 2 == 0);
    Go.turn = (even && Go.current == JGO_BLACK) || (!even && Go.current == JGO_BLACK);
    streaming();
</script>
